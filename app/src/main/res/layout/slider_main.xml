<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:layout_weight="0.8"-->
    <RelativeLayout
        android:id="@+id/slider_rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@color/colorPrimary"
        android:padding="10dp">
        <TextView
            android:id="@+id/slider_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_ToDoList"
            android:textSize="40sp"
            android:textColor="@color/whiteText"/>
        <TextView
            android:id="@+id/slider_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/slider_text_title"
            android:layout_alignBaseline="@id/slider_text_title"
            android:gravity="end"
            android:textColor="@color/whiteText"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/slider_list_toDoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        android:layout_margin="10dp"
        android:layout_below="@+id/slider_rel_header"
        android:layout_above="@+id/slider_rel_toDoNew"/>
    <RelativeLayout
        android:id="@+id/slider_rel_toDoNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/slider_edit_toDoNewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/slider_butn_toDoAdd"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:id="@+id/slider_butn_toDoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_add"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/slider_text_emptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_todo_list"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slider_rel_header"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <!--android:layout_weight="0.8"-->

    <TextView
        android:id="@+id/slider_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do List"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/slider_list_toDoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        android:layout_below="@+id/slider_text_title"
        android:layout_above="@+id/slider_rel_toDoNew"/>
    <RelativeLayout
        android:id="@+id/slider_rel_toDoNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <EditText
            android:id="@+id/slider_edit_toDoNewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/slider_butn_toDoAdd"/>
        <Button
            android:id="@+id/slider_butn_toDoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/slider_text_emptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Nothing to do"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <!--android:layout_weight="0.8"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do List"/>
    <TextView
        android:id="@+id/main_text_lunchListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch To Do"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/main_list_lunch"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        android:visibility="gone"/>
    <Button
        android:id="@+id/main_butn_lunchAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/main_text_dailyToDoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After Work"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/main_list_dailyToDo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        android:visibility="gone"/>
    <Button
        android:id="@+id/main_butn_toDoAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"/>

</LinearLayout>